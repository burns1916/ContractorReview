<h1>Appointments </h1>
<% @appointments.each do |appointment| %>
    <% if client_user %>
    <ul>
        <li>
        <h3>Project Name: <%= appointment.job_name %></h3></li>
        <strong>Contractor Business Name: </strong><%= appointment.contractor.business_name %><br>
        <strong>Contractor License Number: </strong><%= appointment.contractor.license_number %><br>
        <strong>Project Description: </strong><%= appointment.job_description %><br>
        <strong>Appointment Time: </strong><%= appointment.appointment_time %><br>
        <%= link_to "Write A Review", new_client_appointment_review_path(@client.id, appointment.id) %>
        <br>
        <br>
        </li>
    </ul>
    <% elsif contractor_user %>
    <ul>
    <li>
    <h3>Project Name: <%= appointment.job_name %></h3></li>
    <strong>Project Description: </strong><%= appointment.job_description %><br>
    <strong>Appointment Time: </strong><%= appointment.appointment_time %><br>
    <br>
    <br>
    </li
    <% end %>
<% end %>