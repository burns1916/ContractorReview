<h1> Request an Appontment from a Contractor</h1>

<% if @appointment.errors.any? %>
  <% @appointment.errors.full_messages.each do |message|%>
  <h3><%= message %> </h3>
  <%end%>
<%end%>

<%= form_for (@appointment) do |f| %>

    <strong><%= f.label :contractor_id, "Contractor Name" %></strong>
    <%= f.collection_select :contractor_id, Contractor.all, :id, :business_name %><br>
        <br>
    <strong><%= f.label :job_name, "Job Name" %></strong>
    <%= f.text_field :job_name %><br>
        <br>
    <strong><%= f.label :job_description, "Job Description" %></strong>
    <%= f.text_field :job_description %><br>
        <br>
    <strong><%= f.label :appointment_time, "Appointment Time" %></strong>
    <%= f.datetime_field(:appointment_time, placeholder: "yyyy-mm-dd", min: Date.today) %><br>
        <br>
    <%= f.submit %>

<% end %>

