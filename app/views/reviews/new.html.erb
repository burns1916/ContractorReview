<% if @appointment %>
<h1>Write a Review for <%= @appointment.job_name %></h1>
<% else %>
<h1>Write a Review!</h1>
<% end %>

<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message|%>
  <h3><%= message %> </h3>
  <%end%>
<%end%>

<%= form_for([@appointment, @review]) do |f| %>
    
    <strong><%= f.label :appointment_id, "Project Name" %><strong>
    <%= f.collection_select :appointment_id, Appointment.all, :id, :job_name %><br>

    <strong><%= f.label :rating, "Rate the Job 1-10" %></strong>
    <%= f.number_field :rating %><br>

    <strong><%= f.label :content, "Why did you give this Rating" %></strong>
    <%= f.text_field :content %><br>

    <%= f.submit %>
<% end %>