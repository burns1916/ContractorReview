<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message|%>
  <h3><%= message %> </h3>
  <%end%>
<%end%>

<%= form_for(@review) do |f| %>
    
    <%= f.label :appointment_id, "My Appointments" %>
    <% Appointment.all.each do |appointment| %>
        <% if appointment.client.id == current_user.meta.id %>
            <%= f.radio_button :appointment_id, appointment.id %>
            <%= f.label :appointment_id, appointment.job_name %>
        <% end %>
        <br>
    <% end %><br>

    <%= f.label :rating, "Rate the Job 1-10" %>
    <%= f.number_field :rating %><br>

    <%= f.label :content, "Why did you give this Rating" %>
    <%= f.text_field :content %><br>

    <%= f.submit %>
<% end %>